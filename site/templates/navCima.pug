doctype html
html
   head
      meta(charset="utf-8")
      title Petit Gatô Cachorrô
      link(href="estilo.css" rel="stylesheet" type="text/css")

   body
      a(id="navCimaLoja" onClick="alterarPagina('loja')") Loja
      a(id="navCimaServicos" onClick="alterarPagina('servicos')") Serviços
      a(id="navCimaPets" onClick="alterarPagina('pets')") Pets
      a(id="navCimaBlog" onClick="alterarPagina('blog')") Blog
      a(id="navCimaSair" style="float:right" onClick="sair()") Sair
      if(cliente)
         a(id="botaoCarrinho" onClick="alterarPagina('carrinho')")
            img(src="Imagens/carrinho-de-compras.jpg" alt="carrinho" width="20px" height="20px")
         h5(cod=chave id="welcome" onClick="alterarPagina(this.getAttribute('pagina'))" pagina="loginClienteSucesso") Olá, #{nome} =D
      else
         h5(cod=chave id="welcome" onClick="alterarPagina(this.getAttribute('pagina'))" pagina="loginAdminSucesso") Olá, #{nome} =D
